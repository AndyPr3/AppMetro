<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_politica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_politica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="1dp"
        app:cardElevation="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_politica_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PolÃ­tica de privacidad y datos personales"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_politica_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/texto_politica"
                android:textAppearance="?attr/textAppearanceBody2"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.core.widget.NestedScrollView>
