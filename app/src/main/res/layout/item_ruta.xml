<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/headerRuta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtRuta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ruta"
            android:textColor="@color/primary"
            android:textAppearance="?attr/textAppearanceBody2" />

        <ImageView
            android:id="@+id/imgArrowDown"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentRuta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/lblHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario:"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="De lunes a Viernes: 10:00 a.m. – 23:00 p.m.; sábado 05:00 a.m. – 23:20 p.m.; domingo 05:00 a.m. – 22:00 p.m."
            android:textAppearance="?attr/textAppearanceBody2" />

        <TextView
            android:id="@+id/lblRecorrido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Recorrido:"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgRecorrido"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/im_map" />
    </LinearLayout>

</LinearLayout>